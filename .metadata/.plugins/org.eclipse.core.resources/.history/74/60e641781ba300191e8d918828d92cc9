/* package whatever; // don't place package name! */

import java.util.*;
import java.lang.*;
import java.io.*;

/* Name of the class has to be "Main" only if the class is public. */
class PractiseProblem
{
	static <T> void op(T x){// Java Generic function
		System.out.println(x);
	}
	static int getSubstringCount(String text, String pattern){
		int c = 0, flag = 0;
		for(int i=0; i<text.length();){
			for(int j=0;j<pattern.length();){
				if (text.charAt(i) == pattern.charAt(j)){
					i = i + 1;
					j = j + 1;
					flag = 1;
				}
				else{
					flag = 0;
					break;
				}
			if (flag == 1){ // A pattern was matched -> increase count
				c += 1;
				
			}
			
		}
		}
		return c;
		
	}
	public static void main (String[] args) throws java.lang.Exception
	{
		op(getSubstringCount("MESMERIZING MESSAGE","MES"));
	}
}